PROGRAM MATRICES;
TYPE
  MATRIZ = ARRAY[1..10,1..10] OF REAL;

VAR
  A,B,PRODUCTO : MATRIZ;
  LONGITUD     : INTEGER;

(***********************************)
(* LECTURA DE MATRIZ *)
   PROCEDURE LeerMatriz(var M:MATRIZ;L:INTEGER);
   VAR
    I,J:INTEGER;
    BEGIN
    FOR I:= 1 TO L DO
      BEGIN
       WRITELN('INTRODUZCA LA PRIMERA FILA',I,1);
       FOR J := 1 TO L DO
        READ (M[I,J]);
        READLN
      END
     END;

(* MULTIPLICACION DE MATRICES *)
PROCEDURE MULTIPLICAR(VAR P1,P2,P:MATRIZ;L:INTEGER);
VAR
 I,J,K : INTEGER;
 BEGIN
   FOR I := 1 TO L DO
     FOR J := 1 TO L DO
       BEGIN
        P[I,J] := 0;
        FOR K := 1 TO L DO
         P[I,J] := P[I,J] + P1[I,K] * P2[K,J]
       END
 END;

(* IMPRIMIR MATRICES *)
PROCEDURE IMPRIMIR(VAR M:MATRIZ;L:INTEGER);
VAR
 I,J:INTEGER;
 BEGIN
   FOR I := 1 TO L DO
   BEGIN
     FOR J := 1 TO L DO
       WRITE (M[I,J]:10:2);
     WRITELN
   END
 END;

(*****************************)
(* CUERPO DEL PROGRAMA PRINCIPAL *)
BEGIN
    WRITELN('INTRODUZCA EL N. DE FILAS O COLUMNAS DE LAS MATRICES CUADRADAS');
  READLN(LONGITUD);
  WRITELN('INTRODUZCA LOS ELEMENTOS DE LA PRIMERA MATRIZ');
  LeerMatriz(A,LONGITUD);
  WRITELN('INTRODUZCA LOS ELEMENTOS DE LA SEGUNDA MATRIZ');
  LeerMatriz(B,LONGITUD);
  Multiplicar(A,B,PRODUCTO,LONGITUD);
  WRITELN('LA MATRIZ PRODUCTO ES');
  IMPRIMIR(PRODUCTO,LONGITUD);
END.





